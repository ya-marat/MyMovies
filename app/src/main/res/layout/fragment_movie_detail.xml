<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black"
    android:clickable="true"
    android:focusable="true"
    tools:context=".presentation.fragments.MovieDetailFragment">

    <ProgressBar
        android:id="@+id/pb_loading_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_detail_movie_poster"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_favourites_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/ic_favourites_btn"
                tools:minHeight="300dp"
                android:contentDescription="@null" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/img_detail_movie_poster">

                <ImageButton
                    android:id="@+id/ib_favourites"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_favourites_btn"
                    android:background="@null"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_movie_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ib_favourites"
                    android:maxWidth="300dp"
                    tools:text="MovieName looooooo oo ooooooooo ooo" />

                <TextView
                    android:id="@+id/tv_detail_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#969696"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_name"
                    tools:text="2022 | 18+ | 1 Season | K-Drama" />

                <TextView
                    android:id="@+id/tv_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_movie"
                    tools:text="A young woman, bullied to the point of deciding to drop out of school, plans the best way to get revenge. After becoming a primary school teacher, she takes in the son of the man who tormented her the most to enact her vengeance." />

                <LinearLayout
                    android:id="@+id/ll_starring_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_description">

                    <TextView
                        android:id="@+id/tv_starring_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/starring_label"
                        android:textColor="@color/detail_text_color"
                        tools:text="@string/starring_label" />

                    <TextView
                        android:id="@+id/tv_starring_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/detail_text_color"
                        tools:text="Song Hye-kyo, Lee Do-hyun, Lim Ji-yeon, Song Hye-kyo, Lee Do-hyun, Lim Ji-yeon,Song Hye-kyo, Lee Do-hyun, Lim Ji-yeon, " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_creators_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ll_starring_group">

                    <TextView
                        android:id="@+id/tv_creators_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creators_label"
                        android:textColor="@color/detail_text_color"
                        app:layout_constraintTop_toBottomOf="@id/ll_starring_group"
                        tools:text="@string/creators_label" />

                    <TextView
                        android:id="@+id/tv_creators_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/detail_text_color"
                        tools:text="Kim Eun-sook, An Gil-ho" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_genre_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ll_creators_group">

                    <TextView
                        android:id="@+id/tv_genre_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genre_label"
                        android:textColor="@color/detail_text_color"
                        tools:text="@string/genre_label" />

                    <TextView
                        android:id="@+id/tv_genre_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/detail_text_color"
                        tools:text="Revenge, Psychological Thriller" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_trailer_section_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_genre_group">

                    <TextView
                        android:id="@+id/tv_trailer_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trailer_lbl"
                        android:textColor="@color/detail_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="@string/trailer_lbl" />

                    <TextView
                        android:id="@+id/tv_trailer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/detail_text_color"
                        android:textSize="14sp"
                        tools:text="Название трейлера" />

                    <FrameLayout
                        android:id="@+id/trailer_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        android:background="#777777">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/video_icon" />
                    </FrameLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>