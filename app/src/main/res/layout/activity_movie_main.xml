<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.activities.MovieMainActivity">

    <include
        layout="@layout/activity_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_test_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/movie_main_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/movie_main_bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/movie_main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        app:itemActiveIndicatorStyle="@null"
        app:itemBackground="@null"
        app:itemIconTint="@drawable/bottom_bar_selector"
        app:itemPaddingBottom="12dp"
        app:itemPaddingTop="6dp"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActiveBoldEnabled="false"
        app:itemTextColor="@drawable/bottom_bar_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>