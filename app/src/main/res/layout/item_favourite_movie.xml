<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    app:cardCornerRadius="8dp"
    tools:background="@color/alert_dialog"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_favourite_movie_poster"
        android:layout_width="60dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/default_poster"
        tools:background="@color/black"/>

    <TextView
        android:id="@+id/tv_favourite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_favourite_movie_poster"
        tools:text="Movie name"/>

    <TextView
        android:id="@+id/tv_favourite_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_text_color"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="2025"
        app:layout_constraintTop_toBottomOf="@id/tv_favourite_name"
        app:layout_constraintLeft_toRightOf="@id/iv_favourite_movie_poster"
        tools:text="2025"/>

    <ImageButton
        android:id="@+id/ib_fav_movie_item_menu"
        android:layout_width="4dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_kebab"
        android:background="@null"
        android:layout_marginRight="30dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>