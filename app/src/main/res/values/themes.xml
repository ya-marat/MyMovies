<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMovies" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@color/app_black</item>
        <item name="android:windowBackground">@color/app_black</item>
        <item name="android:colorBackground">@color/app_black</item>
        <item name="android:fragment">@color/app_black</item>

    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/alert_dialog</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/main_color_2</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="CustomPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/main_color_2</item>
        <item name="popupMenuBackground">@color/black</item>

        <!-- Для Material Components -->
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">#FF00FF00</item>
    </style>

    <style name="Theme.MyMovies" parent="Base.Theme.MyMovies" />
</resources>